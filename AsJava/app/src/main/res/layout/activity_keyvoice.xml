<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/keyvoice_et2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="http://portal.yun.gehua.net.cn:8080/win8_gh_apk/index.htm"/>
        <!--     -->
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/keyvoice_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问歌华"
            android:textSize="35sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/keyvoice_et1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="https://www.baidu.com/"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/keyvoice_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问百度"
            android:textSize="35sp"/>
    </LinearLayout>


    <WebView
        android:id="@+id/keyvoice_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>