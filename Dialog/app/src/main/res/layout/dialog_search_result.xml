<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_confirm"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:shadowColor="#ccffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:text="搜索结果"
        android:textColor="#12283c"
        android:textSize="23sp" />

    <!--<TextView
        android:id="@+id/dialog_confirm_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_confirm_msg_paddingTop"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="@dimen/dialog_confirm_msg_paddingTop"
        android:textColor="#97c1dc"
        android:text="代课老师解放路口的发生离开了
        就开始了对方
        抗裂砂浆的方式来地方
        拉克丝几点返款老师
        考虑对方"
        android:textSize="@dimen/font45" />-->
    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/search_tv_nums"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text="个电视"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/search_broadcast_nums"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text="个服务"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/search_service_nums"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text="个广播"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_result"
                android:textColor="#97c1dc"
                android:textSize="@dimen/font45"
                android:text="搜索失败"/>

        </TableRow>
    </TableLayout>

</LinearLayout>