<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taow.threadwaitlock.MainActivity"
    android:layout_marginTop="20dp"
    >

    <android.support.constraint.Guideline
        android:id="@+id/gl_line1"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_begin="40dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="40dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/bt_start"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="启动线程"
        app:layout_constraintRight_toLeftOf="@+id/bt_wait"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gl_line1"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/bt_wait"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="wait线程"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_start"
        app:layout_constraintRight_toRightOf="@+id/bt_notify"
        android:layout_marginStart="20dp" />

    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/bt_notify"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="notify线程"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_wait"
        app:layout_constraintRight_toLeftOf="@+id/bt_sleep"
        android:layout_marginStart="20dp" />
<Button
    android:layout_marginLeft="20dp"
    android:id="@+id/bt_sleep"
    android:layout_width="0dp"
    app:layout_constraintHorizontal_weight="1"
    android:layout_height="wrap_content"
    android:text="sleep线程"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/bt_notify"
    app:layout_constraintRight_toLeftOf="@+id/gl_line2"
    android:layout_marginStart="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="922dp" />
    <TextView
        android:id="@+id/tv_log"
        android:layout_width="946dp"
        android:layout_height="wrap_content"
        android:text="日志如下："
        android:textSize="25sp"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_sleep"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
